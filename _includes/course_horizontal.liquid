<div class="col mb-4">
  <a href="{% if course.redirect %}{{ course.redirect }}{% else %}{{ course.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if course.thumbnail %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=course.thumbnail sizes="(min-width: 768px) 156px, 50vw" alt="course thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if course.thumbnail %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ course.title }}</h3>
            <p class="card-text">{{ course.description }}</p>
            <p class="card-meta">Year: {{ course.year }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if course.resources %}
                <div class="resources-icon">
                  <div class="icon" data-toggle="tooltip" title="Course Resources">
                    <a href="{{ course.resources }}"><i class="fa-solid fa-book-open"></i></a>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
